<?xml version="1.0" encoding="utf-8"?>
<plugin
    xmlns="http://www.phonegap.com/ns/plugins/1.0"
    id="de.rwthaachen.rz.rwthapp.plugins.wp8language"
    version="0.3.0">

  <name>German Language Plugin for Windows / Windows Phone 8.1</name>
  
  <platform name="windows">
	<config-file target="package.windows.appxmanifest" parent="/Package/Resources">
		<Resource Language="DE-DE" />
        <Resource Language="EN-US" />
    </config-file>
	
	<config-file target="package.windows10.appxmanifest" parent="/Package/Resources">
		<Resource Language="DE-DE" />
        <Resource Language="EN-US" />
    </config-file>
	
	<config-file target="package.phone.appxmanifest" parent="/Package/Resources">
		<Resource Language="DE-DE" />
        <Resource Language="EN-US" />
    </config-file>
  </platform>

</plugin>
